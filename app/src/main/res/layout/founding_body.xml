<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/found1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="149dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="76dp"
          />

    <TextView
        android:id="@+id/found1_text"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:fontFamily="cursive"
        android:text=" Priyank Samagra"
        android:textAlignment="center"
        android:textColor="#051472"
        android:textSize="20dp"
        android:layout_below="@+id/found1"
        android:layout_alignLeft="@+id/found2_text"
        android:layout_alignStart="@+id/found2_text" />

    <ImageView
        android:id="@+id/found2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/found1"
        android:layout_alignStart="@+id/found1"
        android:layout_below="@+id/found1_text"
        android:layout_marginTop="77dp"
          />

    <TextView
        android:id="@+id/found2_text"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="Gopikant Ghosh"
        android:textSize="20dp"
        android:fontFamily="cursive"

        android:textAlignment="center"
        android:textColor="#051472"
        android:layout_below="@+id/found2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>