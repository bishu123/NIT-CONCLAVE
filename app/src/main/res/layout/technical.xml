<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/nikhil"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/nikhil_text"
        android:layout_alignStart="@+id/nikhil_text" />

    <TextView
        android:id="@+id/nikhil_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nikhil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:fontFamily="cursive"
        android:text="Nikhil Goyal"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/pankaj"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/nikhil_text"
        android:layout_alignLeft="@+id/nikhil_text"
        android:layout_alignStart="@+id/nikhil_text" />

    <TextView
        android:id="@+id/pankaj_text"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pankaj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:fontFamily="cursive"
        android:text="Pankaj Makwana"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

</RelativeLayout>