<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/marketing1_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/marketing1"
        android:layout_alignStart="@+id/marketing1"
        android:layout_below="@+id/marketing1"
        android:layout_marginTop="19dp"
        android:fontFamily="cursive"
        android:text="Aysuh Trivedi"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/marketing1"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/marketing2"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_below="@+id/marketing1_text"
        android:layout_alignLeft="@+id/marketing1_text"
        android:layout_alignStart="@+id/marketing1_text"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/marketing2_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/marketing2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/marketing2"
        android:layout_marginBottom="82dp"
        android:fontFamily="cursive"
        android:text="Amrut Kumar"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />
</RelativeLayout>