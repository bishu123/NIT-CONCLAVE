<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/patron1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="71dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/patron1_text"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/patron1"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Prof. R.K.gupta"
        android:textAlignment="center"
        android:textColor="#051472"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/patron1_text2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_below="@+id/patron1_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Chief Patron"
        android:textAlignment="center"
        android:textColor="#051472"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/patron2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"

        android:layout_below="@+id/patron1_text2"
        android:layout_alignLeft="@+id/patron1_text2"
        android:layout_alignStart="@+id/patron1_text2" />

    <TextView
        android:id="@+id/patron2_text"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_below="@+id/patron2"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Prof. Mokaddes Ali Ahmed"
        android:textAlignment="center"
        android:textColor="#051472"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/patron2_text2"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_below="@+id/patron2_text"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="Patron"
        android:textAlignment="center"
        android:textColor="#051472"/>
</RelativeLayout>