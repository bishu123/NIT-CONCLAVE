<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78a3f4"
    tools:context="com.bishu.jasbir_singh.nits_conclave.Conclave_SignUp">

    <EditText
        android:id="@+id/signup_pass"
        android:layout_width="337dp"
        android:layout_height="51dp"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="5dp"
        android:ems="10"
        android:background="@drawable/circlebtn"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/signup_cpass"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/signup_cpass"
        android:layout_width="337dp"
        android:layout_height="51dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circlebtn"
        android:ems="10"
        android:paddingLeft="5dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/profile_uri" />

    <Button
        android:id="@+id/Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circlebtn"
        android:elevation="0dp"
        android:text="Sign Up"
        android:textColor="#e9f1fc"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="337dp"
        android:layout_height="51dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/circlebtn"
        android:ems="10"
        android:hint="Email"
        android:paddingLeft="5dp"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/signup_pass"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/username"
        android:layout_width="337dp"
        android:layout_height="51dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="5dp"
        android:background="@drawable/circlebtn"
        android:ems="10"
        android:hint="User Name "
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/signup_email"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/profile_uri"
        android:layout_width="212dp"
        android:layout_height="51dp"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:clickable="false"
        android:ems="10"
        android:paddingLeft="5dp"
        android:background="@drawable/circlebtn"
        android:hint="Profile Pic Uri"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/Signup"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/choose" />

    <Button
        android:id="@+id/choose"
        android:background="@drawable/circlebtn"
        android:layout_width="90dp"

        android:layout_height="51dp"
        android:layout_marginBottom="104dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="8dp"
        android:text="Choose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
