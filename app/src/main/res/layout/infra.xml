<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/infra1_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="106dp"
        android:fontFamily="cursive"
        android:text="Ayush Raj"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="17dp"
        android:layout_alignTop="@+id/infra1"
        android:layout_alignLeft="@+id/infra1"
        android:layout_alignStart="@+id/infra1" />

    <ImageView
        android:id="@+id/infra1"
        android:layout_width="90dp"
        android:layout_height="90dp"

        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/infra2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/infra1_text"
        android:layout_alignStart="@+id/infra1_text"
        android:layout_below="@+id/infra1_text"
        android:layout_marginTop="42dp"
         />

    <TextView
        android:id="@+id/infra2_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/infra2"
        android:layout_alignStart="@+id/infra2"
        android:layout_below="@+id/infra2"
        android:layout_marginTop="12dp"
        android:fontFamily="cursive"
        android:text="Ajit Choudhary"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

</RelativeLayout>